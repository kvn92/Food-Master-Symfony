{% extends 'base.html.twig' %}

{% block title %} rectte {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('recette.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0 rounded-4">
        
        {# 📌 Détails du Commentaire #}
        <h3 class="text-center text-primary">Recette #{{ recette.id }}</h3>
        <p class="text-muted text-center">
            Publié par <strong>{{ recette.user.pseudo }}</strong> le {{ recette.createAt | date('d-m-Y à H:i') }}
        </p>

        {# 📸 Image de la Recette #}
        {% if recette.photo %}
            <div class="text-center my-3">
                <img src="{{ asset('uploads/recettes/' ~ recette.photo) }}" alt="Image de la recette" class="img-fluid rounded recipe-image">
            </div>
        {% endif %}

        {# 📌 Détails de la Recette liée #}
        <div class="mt-4">
            <h5 class="fw-bold">Recette associée :</h5>
            <p>
  
                    {{ recette.titre }}
                </a>
            </p>
        </div>

        {# 📝 Contenu du Commentaire #}
        <div class="mt-4">
            <h5 class="fw-bold">Preparation :</h5>
            <p class="text-dark">{{ recette.preparation }}</p>
        </div>

        {# 🔘 Boutons d’actions #}
        <div class="text-center mt-4 d-flex justify-content-center gap-3">
            {# ✅ Bouton Valider #}
            

            {# ❌ Bouton Supprimer #}
           

            {# 🔙 Bouton Retour #}
            <a href="{{ path('admin.recettes.validation') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour 
            </a>
        </div>
    </div>
</div>
{% endblock %}
